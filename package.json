{
  "name": "academic-research-mcp-suite",
  "version": "1.0.1",
  "description": "A comprehensive Model Context Protocol (MCP) server suite for academic research workflow automation. Includes 6 specialized servers for complete research pipeline from question refinement to report generation.",
  "main": "dist/research_orchestrator.js",
  "bin": {
    "academic-research-orchestrator": "./dist/research_orchestrator.js",
    "academic-research-initiator": "./dist/research_initiator_developer_server.js",
    "academic-data-processor": "./dist/data_wrangler.js",
    "academic-code-generator": "./dist/code_generator_v2.js",
    "academic-code-executor": "./dist/code_executor.js",
    "academic-research-writer": "./dist/research_writer.js"
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "./scripts/compile.sh",
    "test": "node scripts/test.js",
    "setup": "node scripts/setup-mcp.js",
    "demo": "node scripts/demo.js",
    "prepublishOnly": "npm run build && npm run test"
  },
  "files": [
    "dist/",
    "src/",
    "config/",
    "docs/",
    "scripts/",
    "README.md",
    "tsconfig.json"
